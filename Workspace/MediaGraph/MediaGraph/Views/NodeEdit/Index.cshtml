@model MediaGraph.ViewModels.Edit.NodeDescriptionViewModel
@{ 
    ViewBag.Title = "Edit Request";
    object formStyle = new { @class = "form-control", autocomplete = "off" };
}
@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @*<script type="text/javascript" src="~/Scripts/myScripts/nodeForm.js"></script>*@
}

<article>
    @using (Html.BeginForm("CreateNode", "NodeEdit", FormMethod.Post, new { autocomplete = "off", onsubmit = "validateForm" }))
    {
        if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <section class="row">
                <section class="col s12">
                 @Html.ValidationSummary()
                </section>
            </section>
        }
        <section class="row">
            <div class="input-field col s12">
                @Html.EnumDropDownListFor(x => x.ContentType, "What are you adding?")
            </div>
        </section>
        <section class="row">
            <div class="input-field col s6">
                @Html.TextBoxFor(x => x.PrimaryName)
                @Html.LabelFor(x => x.PrimaryName)
            </div> 
            <div class="input-field col s6">
                <div id="other-names">
                    <label>Other Names</label>
                    <div class="chips chips-placeholder"></div>
                </div>
            </div>
        </section>
        <section class="row">
            <div class="input-field col s6">
                @Html.TextBoxFor(x => x.Franchise)
                @Html.LabelFor(x => x.Franchise)
            </div>
            <div class="input-field col s6">
                <label id="date-label">Date</label>
                <input type="text" class="datepicker" />
            </div>
        </section>
        <section class="row">
            <div class="input-field col s2">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </section>
    }
</article>