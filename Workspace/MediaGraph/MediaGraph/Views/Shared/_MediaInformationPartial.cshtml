@model MediaGraph.ViewModels.Edit.MediaNodeViewModel
<input type="hidden" name="Genres" value="@Model.GetGenresJson()"/>
<div class="col s12 m6 input-field">
    @Html.LabelFor(x => x.MediaType, new { @class = "active" })
    @Html.DropDownListFor(x => x.MediaType, new List<SelectListItem>
    {
        new SelectListItem { Value = "0", Text = "Media Type..." },
        new SelectListItem { Value = "1", Text = "Audio", Disabled = true },
        new SelectListItem { Value = "2", Text = "Book" },
        new SelectListItem { Value = "4", Text = "Moive, TV Show, Video" },
        new SelectListItem { Value = "8", Text = "Video Game" }
    })
</div>
<div class="col s12 m6 input-field">
    @Html.TextBoxFor(x => x.CommonName, new { @class = "validate" })
    @Html.LabelFor(x => x.CommonName)
</div>
<div class="col s12 input-field">
    <label for="other-name-chips" class="active">Other Names</label>
    <div id="other-name-chips" class="chips"></div>
</div>
<div class="col s12 m6 input-field">
    @Html.TextBoxFor(x => x.FranchiseName, new { @class = "validate" })
    @Html.LabelFor(x => x.FranchiseName)
</div>
<div class="col s12 m6 input-field">
    <input id="@Html.NameFor(x => x.ReleaseDate)" type="date" name="@Html.NameFor(x => x.ReleaseDate)" class="validate" value="@MediaGraph.Code.DateValueConverter.ToDisplayFormat(Model.ReleaseDate)"/>
    <label for="@Html.NameFor(x => x.ReleaseDate)" class="active">Initial Release Date</label>
</div>
<div class="col s12 input-field">
    <label for="genre-chips" class="active">Genres</label>
    <div id="genre-chips" class="chips"></div>
</div>
