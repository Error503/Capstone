@model MediaGraph.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_ContainerLayout.cshtml";
}

<h3 class="center-align">Register</h3>
<h5 class="center-align">Create a new account</h5>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <article class="row">
        <section class="col s12 offset-m2 m8 offset-l3 l6">
            <div class="input-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="input-field">
                @Html.PasswordFor(m => m.Password)
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="input-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
        </section>
    </article>
    <article class="row">
        <section class="col s12 offset-m2 m8 offset-l3 l6">
            <div class="center-align">
                <button type="submit" class="waves-effect waves-light btn">Register</button>
            </div>
        </section>
    </article>
}
<div>
    @Html.ValidationSummary("", new { @class = "red-text text-darken-2" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
