@{
    ViewBag.Title = "Visualization";
    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "get",
        OnSuccess = "searchSuccessful",
        OnFailure = "searchFailed"
    };
}

@section css {
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/vis/4.21.0/vis.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/graphStyle.css" />
}

@section headScripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vis/4.21.0/vis.min.js"></script>
}
@section scripts {
    <script src="~/Scripts/myScripts/graph/graph-controller.js"></script>
    <script src="~/Scripts/myScripts/graph/network-display-controller.js"></script>
    <script src="~/Scripts/myScripts/graph/timeline-display-controller.js"></script>
}

<div class="visualization-wrapper">
    <article class="row">
        <section id="visualization-container" class="col s12">
            <div id="visualization-target" class="visualization"></div>
        </section>
    </article>
    <article class="row">
        <section class="col s12 m6">
            @using (Ajax.BeginForm("GetNetworkInformation", "Graph", null, options, new Dictionary<string, object> { { "id", "search-form" }, { "autocomplete", "off" } }))
            {
                <input type="hidden" name="targetId" />
                <div class="valign-wrapper">
                    <div class="col s9 input-field">
                        <input type="text" name="searchText" id="autocomplete-field" class="autocomplete" />
                        <label for="searchName">Search</label>
                    </div>
                    <div class="col s3">
                        <button id="searchButton" type="button" class="waves-effect waves-light btn"><i class="material-icons">search</i></button>
                    </div>
                </div>
            }
        </section>
        <section class="col s12 m6">
            <form id="visualization-options">
                <label for="type-wrapper">Visualization Type</label>
                <p id="type-wrapper">
                    <input type="radio" name="visualizationType" value="network" id="option1" class="with-gap" checked="checked" />
                    <label for="option1">Network</label>
                    <input type="radio" name="visualizationType" value="timeline" id="option2" class="with-gap" />
                    <label for="option2">Timeline</label>
                </p>
            </form>
        </section>
    </article>
</div>

<div id="context-popup" class="popup inactive">
    <div class="collection">
        <a id="delete-context-link" class="collection-item pointer-item">Flag for deletion</a>
        <a id="edit-context-link" href="/edit/index/" class="collection-item">Edit this node</a>
    </div>
</div>
<div id="info-popup" class="popup inactive z-depth-1">
    <table>
        <tbody id="info-table">
            <tr><td></td></tr>
        </tbody>
    </table>
</div>

